@model List<onlineshop.Models.ViewModels.ProductCartViewModel>

@if(Model != null && Model.Any())
{
    <div class="cart_gallery">
        <div class="cart_close">
            <div class="cart_text">
                <h3>cart</h3>
            </div>
            <div class="mini_cart_close">
                <a href="javascript:void(0)"><i class="icon-close icons"></i></a>
            </div>
        </div>
        @foreach (var item in Model)
        {
            <div class="cart_item">
                <div class="cart_img">
                    <a href="/product/ProductDetails/@item.Id"><img src="/Images/Banners/@item.ImageName" alt="@item.Title"></a>
                </div>
                <div class="cart_info">
                    <a href="/product/ProductDetails/@item.Id">@item.Title</a>
                        <p>@item.Count x <span> $@item.Price.GetValueOrDefault(0).ToString("F") </span></p>
                </div>
                <div class="cart_remove">
                    <a onclick="updateCart(@item.Id, 0)"><i class="icon-close icons"></i></a>
                </div>
            </div>
        }
        
    
</div>
<div class="mini_cart_table">
    <div class="cart_table_border">
        
        <div class="cart_total mt-10">
            <span>total:</span>
            <span class="price">
                $@Model.Sum(x=> x.RowSumPrice).GetValueOrDefault(0).ToString("F")
            </span>
        </div>
    </div>
</div>

<script>
    $(".item_count").html(@Model.Sum(x=> x.Count));
</script>


}

<div class="mini_cart_footer">
    <div class="cart_button">
        <a href="/Cart"><i class="fa fa-shopping-cart"></i> View cart</a>
    </div>
    <div class="cart_button">
        <a href="/cart/Checkout"><i class="fa fa-sign-in"></i> Checkout</a>
    </div>
</div>